{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/yungxinkawaii/DV_Week10/master/data/output_merged.csv"
  },
  "width": 800,
  "title": {
    "text": "Timeline of Occurances",
    "fontSize": 20,
    "font": "Helvetica"
  },
  "layer": [
    {
      "mark": {
        "type": "line",
        "line": true,
        "point": { "filled": false, "fill": "white", "size": 100},
        "strokeWidth": 7
      },
      "encoding": {
        "x": {
          "field": "date",
          "type": "temporal",
          "timeUnit": "year",
          "axis": { "title": "Year" }
        },
        "y": { "aggregate": "count", "title": "Count", "type": "quantitative" }
      }
    },
    {
        "mark": {"type": "text", "dx": 12, "dy": -10},
        "encoding": {
          "x": {
            "field": "date",
            "type": "temporal",
            "timeUnit": "year",
            "axis": { "title": "Year", "tickCount": 10 }
          },
          "y": { "aggregate": "count", "title": "Count", "type": "quantitative"},
          "text": {"aggregate": "count", "type": "quantitative"},
          "color": {"value": "black"}
        }
    }
  ]
}
