{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/yungxinkawaii/DV_Week10/main/data/US%20Police%20shootings%20in%20from%202015-22%20cleaned.csv"
  },
  "title": {
    "text": "Victims' Age Distribution",
    "fontSize": 20,
    "font": "Helvetica"
  },
  "width": 800,
  "transform": [
    { "calculate": "datum.gender == 'F' ? 'Female' : 'Male'", "as": "Gender" }
  ],
  "layer": [
    {
      "params": [
        {
          "name": "legend_highlight",
          "select": { "type": "point", "fields": ["Gender"] },
          "bind": "legend"
        }
      ],
      "mark": { "type": "bar" },
      "encoding": {
        "x": {
          "field": "age",
          "title": "Age",
          "bin": { "step": 5 }
        },
        "y": {
          "aggregate": "count",
          "title": "Number"
        },
        "color": {
          "field": "Gender",
          "scale": { "range": ["#675193", "#ca8861"] },
          "legend": {
            "orient": "top-right"
          }
        },
        "opacity": {
          "condition": { "param": "legend_highlight", "value": 1 },
          "value": 0.2
        },
        "tooltip": [
          {
            "field": "age",
            "type": "quantitative",
            "title": "Age",
            "bin": { "step": 5 }
          },
          { "field": "Gender", "type": "nominal", "title": "Gender" },
          { "aggregate": "count", "type": "quantitative", "title": "Victims" }
        ]
      }
    },
    {
      "mark": {
        "type": "line",
        "point": { "filled": false, "fill": "white", "color": "yellow" },
        "color": "yellow"
      },
      "encoding": {
        "x": {
          "field": "age",
          "title": "Age",
          "bin": { "step": 5 }
        },
        "y": {
          "aggregate": "count",
          "title": "Number"
        },
        "tooltip": [
          {
            "field": "age",
            "type": "quantitative",
            "title": "Age",
            "bin": { "step": 5 }
          },
          {
            "aggregate": "count",
            "type": "quantitative",
            "title": "Total Victims"
          }
        ]
      }
    }
  ]
}
